<%- model_class = Doctor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @doctor.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @doctor.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_name) %>:</strong></dt>
  <dd><%= @doctor.clinic_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_street_address) %>:</strong></dt>
  <dd><%= @doctor.clinic_street_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_city) %>:</strong></dt>
  <dd><%= @doctor.clinic_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_state) %>:</strong></dt>
  <dd><%= @doctor.clinic_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_zip_code) %>:</strong></dt>
  <dd><%= @doctor.clinic_zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @doctor.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth_date) %>:</strong></dt>
  <dd><%= @doctor.birth_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic_phone_no) %>:</strong></dt>
  <dd><%= @doctor.clinic_phone_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @doctor.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              doctors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_doctor_path(@doctor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              doctor_path(@doctor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
